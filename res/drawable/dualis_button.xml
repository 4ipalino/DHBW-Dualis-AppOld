<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
             <gradient
       		 	android:angle="90"
        		android:endColor="#ffd3d3d3"
        		android:startColor="#FF808080" />
            <stroke
                android:width="3dp"
                android:color="#ff606060" />
            <corners
                android:radius="3dp" />
           <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
       		 	android:angle="90"
        		android:endColor="#ffd3d3d3"
        		android:startColor="#FF808080" />
            <stroke
                android:width="3dp"
                android:color="#ff606060" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />

        </shape>
    </item>

    <item > 
        <shape>
            <gradient
       		 	android:angle="90"
        		android:endColor="#ffd3d3d3"
        		android:startColor="#FF808080" />
            <stroke
                android:width="2dp"
                android:color="#00000000" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>